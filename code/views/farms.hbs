<title>Farms</title>
<header>Farms</header>
<main>
    <section>
        <article>

            {{!-- Create a table --}}
            <table id="farm-table">

                {{!-- Header section --}}
                <thead>

                    {{!-- For just the first row, we print each key of the row object as a header cell so we
                    know what each column means when the page renders --}}
                    <tr>
                        <th>Farm</th>
                        <th>Farm Name</th>
                        <th>Acres</th>
                        <th>Address</th>
                        <th>Description</th>
                    </tr>
                </thead>

                {{!-- Body section --}}
                <tbody>

                    {{!-- For each row, print attributes in order --}}
                    {{#each data}}
                    <tr>
                        <td>{{this.Farm}}</td>
                        <td>{{this.Farm_Name}}</td>
                        <td>{{this.Acres}}</td>
                        <td>{{this.Address}}</td>
                        <td>{{this.Description}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>


            <form id="add-farm-form-ajax" onsubmit="return confirmAdd()">
                <fieldset>
                    <legend>Add Farm</legend>
                    <p>
                        <label for="input-farm-name">Farm Name:</label> <input type="text" name="input-farm-name"
                            id="input-farm-name" required>
                    </p>
                    <p>
                        <label for="input-acres">Acres:</label> <input type="number" min="0" step="0.01" name="input-acres" id="input-acres"
                            required>
                    </p>
                    <p>
                        <label for="input-address">Address:</label> <input type="text" name="input-address"
                            id="input-address" required>
                    </p>
                    <p>
                        <label for="input-description">Description:</label> <input type="text" name="input-description"
                            id="input-description" required>
                    </p>

                    <input type="submit" value="Add Farm">
                </fieldset>
            </form>

            <script src="./js/add_farm.js"></script>
        </article>
    </section>
</main>